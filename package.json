{
  "name": "watchit-api",
  "version": "1.0.0",
  "description": "Watch It API",
  "main": "dist/server.js",
  "type": "module",
  "scripts": {
    "start": "npm run build && node dist/server.js && npm run sentry:sourcemaps",
    "dev": "npx tsc --watch & nodemon dist/server.js",
    "build": "npx tsc",
    "lint": "eslint 'src/**/*.{js,ts}'",
    "lint:fix": "eslint 'src/**/*.{js,ts}' --fix",
    "test": "cross-env NODE_OPTIONS=--experimental-vm-modules jest",
    "test:watch": "cross-env NODE_OPTIONS=--experimental-vm-modules jest --watch",
    "sentry:sourcemaps": "sentry-cli sourcemaps inject --org maxime-06 --project node-express ./dist && sentry-cli sourcemaps upload --org maxime-06 --project node-express ./dist"
  },
  "keywords": [],
  "author": "Maxime Biechy",
  "license": "ISC",
  "dependencies": {
    "@sentry/cli": "^2.41.1",
    "@sentry/node": "^8.51.0",
    "@sentry/profiling-node": "^8.51.0",
    "bcrypt": "^5.1.1",
    "cors": "^2.8.5",
    "dotenv": "^16.4.7",
    "express": "^4.21.2",
    "express-openapi-validator": "^5.4.2",
    "inversify": "^6.2.1",
    "mongodb-memory-server": "^10.1.3",
    "mongoose": "^8.9.5",
    "pino": "^9.6.0",
    "reflect-metadata": "^0.2.2",
    "swagger-ui-express": "^5.0.1",
    "yamljs": "^0.3.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.18.0",
    "@faker-js/faker": "^9.4.0",
    "@types/bcrypt": "^5.0.2",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.0",
    "@types/jest": "^29.5.14",
    "@types/pino": "^7.0.4",
    "@types/pino-pretty": "^4.7.5",
    "@types/supertest": "^6.0.2",
    "@types/swagger-ui-express": "^4.1.7",
    "@types/yamljs": "^0.2.34",
    "@typescript-eslint/eslint-plugin": "^8.20.0",
    "@typescript-eslint/parser": "^8.20.0",
    "cross-env": "^7.0.3",
    "eslint": "^9.18.0",
    "globals": "^15.14.0",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "lint-staged": "^15.4.1",
    "nodemon": "^3.1.9",
    "pino-pretty": "^13.0.0",
    "prettier": "^3.4.2",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.20.0"
  },
  "lint-staged": {
    "*.{js,ts}": [
      "eslint --fix",
      "prettier --write",
      "git add"
    ]
  }
}
